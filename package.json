{
  "name": "ok-shaun-components",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "playroom:start": "playroom start",
    "playroom:build": "playroom build",
    "generate-sprite": "npm run preprocess-svgs && svg-sprite --symbol --symbol-sprite=sprite.svg --symbol-dest=src/components/Icon/utils --symbol-clean-ids --symbol-clean-selectors --symbol-transform='svgo' --symbol-example=true src/components/Icon/utils/svgs/*.svg",
    "preprocess-svgs": "node src/components/Icon/utils/process-svgs.js"
  },
  "dependencies": {
    "@vanilla-extract/css": "^1.16.1",
    "@vanilla-extract/sprinkles": "^1.6.3",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "^3.2.2",
    "@eslint/js": "^9.11.1",
    "@storybook/addon-essentials": "^8.4.2",
    "@storybook/addon-interactions": "^8.4.2",
    "@storybook/addon-onboarding": "^8.4.2",
    "@storybook/addon-themes": "^8.4.2",
    "@storybook/blocks": "^8.4.2",
    "@storybook/react": "^8.4.2",
    "@storybook/react-vite": "^8.4.2",
    "@storybook/test": "^8.4.2",
    "@types/node": "^22.7.7",
    "@types/react": "^18.3.10",
    "@types/react-dom": "^18.3.0",
    "@vanilla-extract/vite-plugin": "^4.0.18",
    "@vitejs/plugin-react": "^4.3.2",
    "eslint": "^9.16.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.12",
    "eslint-plugin-storybook": "^0.11.0",
    "gh-pages": "^6.2.0",
    "globals": "^15.9.0",
    "playroom": "^0.39.1",
    "prettier": "^3.4.1",
    "storybook": "^8.4.2",
    "svg-sprite": "^2.0.4",
    "svgo": "^3.0.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.7.0",
    "vite": "^5.4.8",
    "vite-plugin-dts": "^4.2.4"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "eslintConfig": {
    "extends": "./eslint.config.js"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "trailingComma": "all",
    "printWidth": 80,
    "tabWidth": 2
  }
}
